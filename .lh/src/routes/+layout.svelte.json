            "content": "<script lang=\"ts\">\r\n  import { appWindow } from '@tauri-apps/api/window';\r\n  import WorkspaceSwitcher from '$lib/components/WorkspaceSwitcher.svelte';\r\n  import TabManager from '$lib/components/TabManager.svelte';\r\n  import ResizablePanel from '$lib/components/ResizablePanel.svelte';\r\n  import { showResourceExplorer, showTerminal, showRightSidebar } from '$lib/stores/layout';\r\n  \r\n  let isMaximized = false;\r\n  \r\n  async function toggleMaximize() {\r\n    isMaximized = !isMaximized;\r\n    if (isMaximized) {\r\n      await appWindow.maximize();\r\n    } else {\r\n      await appWindow.unmaximize();\r\n    }\r\n  }\r\n</script>\r\n\r\n<div class=\"h-screen flex flex-col\" data-tauri-drag-region>\r\n  <!-- Top Navigation Bar -->\r\n  <div class=\"navbar bg-base-200 flex justify-between items-center h-12\">\r\n    <div class=\"flex-1\">\r\n      <WorkspaceSwitcher />\r\n      <div class=\"form-control px-2\">\r\n        <input type=\"text\" placeholder=\"Search\" class=\"input input-bordered input-sm w-64\" />\r\n      </div>\r\n      <!-- Navigation and Layout Controls -->\r\n      <div class=\"flex items-center gap-2\">\r\n        <button class=\"btn btn-ghost btn-sm\" on:click={() => showResourceExplorer.update(v => !v)}>\r\n          <i class=\"fas fa-bars\"></i>\r\n        </button>\r\n        <button class=\"btn btn-ghost btn-sm\" on:click={() => showTerminal.update(v => !v)}>\r\n          <i class=\"fas fa-terminal\"></i>\r\n        </button>\r\n        <button class=\"btn btn-ghost btn-sm\" on:click={() => showRightSidebar.update(v => !v)}>\r\n          <i class=\"fas fa-columns\"></i>\r\n        </button>\r\n      </div>\r\n    </div>\r\n    <!-- Window Controls -->\r\n    <div class=\"flex-none\">\r\n      <button class=\"btn btn-ghost btn-sm\" on:click={() => appWindow.minimize()}>\r\n        <i class=\"fas fa-window-minimize\"></i>\r\n      </button>\r\n      <button class=\"btn btn-ghost btn-sm\" on:click={toggleMaximize}>\r\n        <i class=\"fas fa-window-maximize\"></i>\r\n      </button>\r\n      <button class=\"btn btn-ghost btn-sm\" on:click={() => appWindow.close()}>\r\n        <i class=\"fas fa-times\"></i>\r\n      </button>\r\n    </div>\r\n  </div>\r\n\r\n  <!-- Main Content Area -->\r\n  <div class=\"flex-1 flex overflow-hidden\">\r\n    <!-- Left Icon Sidebar -->\r\n    <div class=\"w-12 bg-base-300 flex flex-col items-center py-2 shrink-0\">\r\n      <!-- Add icons here -->\r\n    </div>\r\n\r\n    <!-- Resource Explorer -->\r\n    {#if $showResourceExplorer}\r\n      <ResizablePanel side=\"left\" width=\"250px\">\r\n        <div class=\"h-full bg-base-200\">\r\n          <!-- Resource Explorer Content -->\r\n        </div>\r\n      </ResizablePanel>\r\n    {/if}\r\n\r\n    <!-- Main Content -->\r\n    <div class=\"flex-1 flex flex-col overflow-hidden\">\r\n      <TabManager />\r\n      \r\n      {#if $showTerminal}\r\n        <ResizablePanel width=\"200px\" side=\"left\">\r\n          <div class=\"bg-base-300 h-full\">\r\n            <!-- Terminal Content -->\r\n          </div>\r\n        </ResizablePanel>\r\n      {/if}\r\n    </div>\r\n\r\n    <!-- Right Sidebar -->\r\n    {#if $showRightSidebar}\r\n      <ResizablePanel side=\"right\" width=\"250px\">\r\n        <div class=\"h-full bg-base-200\">\r\n          <!-- Right Sidebar Content -->\r\n        </div>\r\n      </ResizablePanel>\r\n    {/if}\r\n  </div>\r\n\r\n  <!-- Status Bar -->\r\n  <div class=\"h-6 bg-base-300 flex justify-between items-center px-2 text-sm\">\r\n    <div>Ready</div>\r\n    <div>Notifications</div>\r\n  </div>\r\n</div>\r\n\r\n<style lang=\"postcss\">\r\n  :global(html, body) {\r\n    @apply h-full overflow-hidden;\r\n  }\r\n  \r\n  [data-tauri-drag-region] {\r\n    @apply select-none;\r\n  }\r\n</style>\r\n"
