{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "我的应用",
  "version": "0.1.0",
  "identifier": "com.example.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../build"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "zh-CN"
      }
    }
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "我的应用",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": true,
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    }
  }
}
